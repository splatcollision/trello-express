extends layout

block navigation
  ul
    each item in nav
      li
        if item.url.indexOf(path) > -1
          span= item.text
        else
          a(href=item.url)=item.text

block content
  h1= title
  each card in content
    .card
      //- pre(style="display: none;")= JSON.stringify(card)
      h2=card.name
      if card.desc 
        .desc!=card.desc
      if card.actions
        each action in card.actions
          if (action.type === "commentCard")
            p.comment=action.data.text